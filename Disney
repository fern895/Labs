<script type="text/javascript">

/*
function show101()
	{document.getElementById("pic101").style.display = 'block';}
function hide101()
	{document.getElementById("pic101").style.display = 'none';}
function showLion()
	{document.getElementById("picLion").style.display = 'block';}
function hideLion()
	{document.getElementById("picLion").style.display = 'none';} 
*/	
function showPic(WhichPic, whichColor) {
	var PicToShow = document.getElementById(WhichPic);
	PicToShow.style.background = whichColor;
	PicToShow.style.display = 'block';
}
function hidePic(WhichPic, whichColor) {
	var PicToHide = document.getElementById(WhichPic);
	PicToHide.style.display = 'none';
}
</script>
